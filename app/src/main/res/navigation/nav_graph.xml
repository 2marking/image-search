<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph" app:startDestination="@id/splashFragment">

    <fragment android:id="@+id/listFragment" android:name="com.nadarm.imagesearch.ListFragment"
              android:label="fragment_list" tools:layout="@layout/fragment_list">
        <action android:id="@+id/action_listFragment_to_detailFragment" app:destination="@id/detailFragment"/>
    </fragment>

    <fragment android:id="@+id/detailFragment" android:name="com.nadarm.imagesearch.DetailFragment"
              android:label="fragment_detail" tools:layout="@layout/fragment_detail"/>
    <fragment android:id="@+id/splashFragment" android:name="com.nadarm.imagesearch.SplashFragment"
              android:label="fragment_splash" tools:layout="@layout/fragment_splash">
        <action android:id="@+id/action_splashFragment_to_listFragment" app:destination="@id/listFragment"/>
    </fragment>

</navigation>